<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oneshot.model.dao.UserDao">

    <resultMap id="User" type="User">
	  <result column="id" property="id"/>
	  <result column="user_email" property="userEmail"/>
	  <result column="password" property="password"/>
	  <result column="nick_name" property="nickName"/>
	  <result column="admin" property="admin"/>
	  <result column="service" property="service"/>
	  <result column="created_time" property="createdTime"/>
	  <result column="updated_time" property="updatedTime"/>
	</resultMap>
	
    <select id="selectOne" parameterType="String" resultMap="User">
        SELECT *
        FROM user
        WHERE user_email = #{userEmail}
    </select>

	<insert id="insertUser" parameterType="User">
		INSERT INTO user(user_email, password, nick_name, admin, service)
		VALUES (#{userEmail}, #{password}, #{nickName}, #{admin}, #{service})
	</insert>
	
</mapper>