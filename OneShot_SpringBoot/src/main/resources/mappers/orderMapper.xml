<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oneshot.model.dao.OrderDao">
	<insert id="createOrder" parameterType="Order">
		INSERT INTO oneshot.order (user_id, order_url)
		VALUES (#{userId}, #{orderUrl})
	</insert>
	
    <select id="urlCheck" parameterType="String" resultType="int">
        SELECT COUNT(*) AS CNT
        FROM oneshot.order
        WHERE order_url = #{orderUrl}
    </select>
	
</mapper>